// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // In Prisma 7, we no longer put env() here. 
  // We specify only the provider.
}

enum Category {
  BONDS
  DEVELOPED
  EMERGING
  GOLD
  BOOSTER
}

model Asset {
  id               String   @id @default(cuid())
  name             String
  ticker           String
  category         Category
  value            Float
  targetPercentage Float
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
