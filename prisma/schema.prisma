// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // In Prisma 7, we no longer put env() here. 
  // We specify only the provider.
}

enum Category {
  BONDS
  DEVELOPED
  EMERGING
  GOLD
  BOOSTER
}

enum TimeHorizon {
  SHORT
  MEDIUM
  LONG
}

model Asset {
  id               String   @id @default(cuid())
  name             String
  ticker           String? // Pytajnik oznacza, że pole jest opcjonalne (Twoja prośba!)
  category         Category
  value            Float
  targetPercentage Float    @default(0)

  // Nowe pola dla sekcji Booster
  rationale   String? // Opcjonalne, bo EDO ich nie potrzebują
  timeHorizon TimeHorizon? // Korzystamy z Enuma powyżej

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
